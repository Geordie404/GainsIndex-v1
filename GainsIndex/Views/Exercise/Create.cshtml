@model Exercise

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/query.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/table.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/sides.css" />
</head>

<div class="container">
<h1>Create Exercise</h1>
<hr />
<div class="row">
    <div class="col-md-4" style="width:100%">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Razor for exercise name *@
            <div class="form-group">
                @Html.TextBoxFor(m => m.exercise_name)
                <span asp-validation-for="exercise_name" class="text-danger"></span>
                <label asp-for="exercise_name" class="control-label">Exercise Name</label>
            </div>
 
            @* Razor TextBox for target muscle *@
            <div class="form-group">
                @Html.TextBoxFor(m => m.target_muscle)
                <span asp-validation-for="target_muscle" class="text-danger"></span>
                <label asp-for="target_muscle" class="control-label">Target Muscle</label>
            </div>
 
            @* Razor TextBox for sets *@
            <div class="form-group">
                @Html.TextBoxFor(m => m.sets, new { @style="width:20%;" })
                <span asp-validation-for="sets" class="text-danger"></span>
                <label asp-for="sets" class="control-label"></label>
            </div>
 
            @* Razor TextBox for reps *@
            <div class="form-group">
                @Html.TextBoxFor(m => m.reps, new { @style="width:20%;" })
                <span asp-validation-for="reps" class="text-danger"></span>
                <label asp-for="reps" class="control-label"></label>
            </div>
            
            @* Razor TextBox for bella workign weight *@
            <div class="form-group">
                @Html.TextBoxFor(m => m.ww_bella, new { @style="width:20%;" })
                <span asp-validation-for="ww_bella" class="text-danger"></span>
                <label asp-for="ww_bella" class="control-label">Bella Working Weight</label>
            </div>
 
            @* Razor TextBox for geordie workign weight *@
            <div class="form-group">
                @Html.TextBoxFor(m => m.ww_geo,  new { @style="width:20%;" })
                <span asp-validation-for="ww_geo" class="text-danger"></span>
                <label asp-for="ww_geo" class="control-label">Geo Working Weight</label>
            </div>
 
            @* Razor SelectList for motion/ body focus/ complexity enums *@
            <br>
            <div class="form-group">
                @Html.DropDownListFor(m => m.motion_group, new SelectList(Enum.GetValues(typeof(Motion))), "Motion Type")
                <span asp-validation-for="motion_group" class="text-danger"></span>
                @Html.DropDownListFor(m => m.body_focus, new SelectList(Enum.GetValues(typeof(Focus))), "Body Focus")
                <span asp-validation-for="body_focus" class="text-danger"></span>
                @Html.DropDownListFor(m => m.exercise_type, new SelectList(Enum.GetValues(typeof(Complexity))), "Complexity")
                <span asp-validation-for="exercise_type" class="text-danger"></span>
            </div>

            @* Razor TextArea for details *@
            <br>
            <label asp-for="details" class="control-label"></label>
            <div class="form-group">
                @Html.TextAreaFor(m => m.details, new { cols="50", rows="5", @style="width:99%;" })
                <span asp-validation-for="details" class="text-danger"></span>
            </div>
           

    @* TABLE FOR DAYS *@

    <table class="daytable table">
    <thead>
        <tr>
            <th></th><th>M</th><th>T</th><th>W</th><th>Th</th><th>F</th><th>Wknd</th>
        </tr>
    </thead>
    <tbody>
        @* Row for Bella *@
        <tr>
            <td>
                Bella
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="bella_monday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="bella_tuesday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="bella_wednesday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="bella_thursday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="bella_friday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="bella_weekend"/>
                </label></div>
            </td>
        </tr>
        @* Row for Geo *@
        <tr>
            <td>
                Geo
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="geo_monday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="geo_tuesday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="geo_wednesday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="geo_thursday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="geo_friday"/>
                </label></div>
            </td>
            <td>
                <div class="form-group form-check"> 
                <label class="form-check-label">
                <input class="form-check-input" asp-for="geo_weekend"/>
                </label></div>
            </td>
        </tr>
    </tbody>
</table>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <br>
    </div>
    <div><a asp-action="Index" class="btn btn-primary">Back to List</a></div>
</div>
</div>

