@model IEnumerable<Exercise>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/header.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/catalog.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/query.css" />

    <script>
    var day = new Date().toLocaleDateString('en', {weekday:'long'});
    document.getElementById("demo").innerHTML = day;
    </script>
</head>

<header class="ghead">
    <div class="gains">
    <div class="gi">
        <h1 class="woi">【ｇａｉｎｓ　ｉｎｄｅｘ】</h1>
        <h1 class="v1">v1</h1>
    </div>
    <div class="links">
        <a class="github" asp-controller="Exercise" asp-action="Home"><i>Workout</i></a>
        <a class="github" asp-controller="Exercise" asp-action="Index"><i>Index</i></a>
        <a class="github" asp-controller="Home" asp-action="About"><i>About</i></a>
        <a class="github" href="https://github.com/Geordie404/GainsIndex-v1">GitHub</a>
    </div>
    </div>
</header>


<body>
<div class="container">
<div class="catalog">

    <h1><i>Exercise Catalog</i>
        
    </h1>

    <div class="filterline"> 
    <h4 style="display: inline;">Filter Catalog by...<a href="@Url.Action("Catalog", "Exercise")" title="Catalog"><img class="pkmn" src="https://img.pokemondb.net/sprites/sword-shield/icon/machoke.png"></a></h4>
    <h6 style="display: inline;"><- Unfilter</h6>
    </div>

    <div class="filters">
                @* filter for name input *@
                <form asp-action="Catalog" method="get">
                    <div class="form-actions no-color" style="display: flex; flex-direction: row">
                            <input type="text"  name="name_filter" placeholder="Name" style="width:80px; height:100%; padding: 0; line-height: 1px;" />&nbsp
                            <input class="arrow" type="image" src="https://i.ibb.co/cN1nxnv/tile-1.png" alt="Submit Form" />

                    </div>
                </form>

                @* filter for motion input *@
                <form asp-action="Catalog" method="get">
                    <div class="form-actions no-color" style="display: flex; flex-direction: row">
                        
                        <select name="motion_filter" style="width:80px; height:100%">
                            <option value="">Motion</option>
                            <option value="Push">Push</option>
                            <option value="Pull">Pull</option>
                            <option value="Hinge">Hinge</option>
                            <option value="Bend">Bend</option>
                        </select>&nbsp
                        <input class="arrow" type="image" src="https://i.ibb.co/cN1nxnv/tile-1.png" alt="Submit Form" />
                        
                    </div>
                </form>

                @* filter for focus input *@
                <form asp-action="Catalog" method="get">
                    <div class="form-actions no-color" style="display: flex; flex-direction: row;">
                        
                        <select name="focus_filter" style="width:80px; height:100%">
                            <option value="">Focus</option>
                            <option value="Arms">Arms</option>
                            <option value="Chest">Chest</option>
                            <option value="Shoulders">Shoulders</option>
                            <option value="Back">Back</option>
                            <option value="Abdominals">Abdominals</option>
                            <option value="Glutes">Glutes</option>
                            <option value="Legs">Legs</option>
                        </select>&nbsp
                        <input class="arrow" type="image" src="https://i.ibb.co/cN1nxnv/tile-1.png" alt="Submit Form" />
                        
                    </div>
                </form>
    </div>
    <div class="cisecards">
    @foreach (var item in Model) {
        <div class="card">
            <div class="cisename"><h2 class="cardname">@Html.DisplayFor(modelItem => item.exercise_name)</h2></div>
            <div class="attributes">
                <p>Target Muscle: @Html.DisplayFor(modelItem => item.target_muscle)</p>
                <p>Motion Type: @Html.DisplayFor(modelItem => item.motion_group)</p>
                <p>Body Focus: @Html.DisplayFor(modelItem => item.body_focus)</p>
                <div class="cardbtn"><p>Complexity: @Html.DisplayFor(modelItem => item.exercise_type)</p><a asp-action="Details" class="btn btn-primary" asp-route-id="@item.id">Details</a></div>
            </div>
        </div>
    }
    </div>
</div>
</div>

</body>