@model IEnumerable<Exercise>

@* WORK OUT INDEX - HOME PAGE *@

@{
    ViewData["Title"] = "GAINS INDEX";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/home.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script> @* day sort *@
        $(document).ready(function(){
            $("select").change(function(){
                $(this).find("option:selected").each(function(){
                    var optionValue = $(this).attr("value");
                    if(optionValue){
                        $(".day").not("." + optionValue).hide();
                        $("." + optionValue).show();
                    } else{
                        $(".day").hide();
                    }
                });
            }).change();
        });
    </script>
    
    <script> @* toggle *@
        $(document).ready(function(){
             $(".bella").show();
             $(".geo").hide();
            $("#bella").click(function(){
                $(".bella").show();
                 $(".geo").hide();
            });
            $("#geo").click(function(){
                $(".geo").show();
                $(".bella").hide();
            });
        });
        $(document).ready(function(){
        $(".switch input").on("change", function(e) {
            const isOn = e.currentTarget.checked;
            if (isOn) {
                $(".bella").hide();
                $(".geo").show();
            } else {
                $(".geo").hide();
                $(".bella").show();
            }
            });
        });
    </script>

</head>

<header>
    <div class="gi">
        <h1 class="woi">【ｇａｉｎｓ　ｉｎｄｅｘ】</h1>
        <h1 class="bark">version 1</h1>
    </div>
    <p class="desc">track your workout routines</p>
    <a href="https://github.com/Geordie404/GainsIndex-v1"><p class="github">github repo</p></a>
    <a class="github" asp-controller="Exercise" asp-action="Catalog"><i>catalog</i></a>
    <a class="github" asp-controller="Exercise" asp-action="Index"><i>INDEX :-B</i></a>
</header>

<div class="woibox">
    @* select day *@
    <div> 
        <select>
            <option>Choose Day</option>
            <option value="monday">Monday</option>
          	<option value="tuesday">Tuesday</option>
            <option value="thursday">Thursday</option>
            <option value="friday">Friday</option>
        </select>
    </div>

    @* toggle button *@
    <div>
        <div class="tglbox">
        <p class="lbltext">user:</p>
        <label class="switch">
        <input type="checkbox">
        <span class="slider"></span>
        </label>
        </div>
    </div>

    @* user name display *@
    <div class="user">
        <p><pre><strong>Today's workout for: </strong><br></pre></p>
        <p class="bella">bellllla!</p>
        <p class="geo">GEO.</p>
    </div>


